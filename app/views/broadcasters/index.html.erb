<p id="notice"><%= notice %></p>

<h1>Broadcasters</h1>

<table>
  <thead>
  <tr>
    <th>User</th>
    <th>Broadcast key</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @broadcasters.each do |broadcaster| %>
    <tr>
      <td><%= broadcaster.user %></td>
      <td><%= broadcaster.broadcast_key %></td>
      <td><%= link_to 'Show', broadcaster %></td>
      <td><%= link_to 'Edit', edit_broadcaster_path(broadcaster) %></td>
      <td><%= link_to 'Destroy', broadcaster, method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Broadcaster', new_broadcaster_path %>
