<div class="musicPlayer">
  <div class="songDetails">
    <div class="songCover">
      <img src="http://localhost:3000/fire.png" style="width:100%; height:100%;">
    </div>
    <p id="songTitle">Song Title</p>
    <p id="songSubGenre">Song Subgenre</p>
    <p id="songGenre">Song Genre</p>
  </div>
  <div class="audio-player border border-primary">
    <button class="play border border-dark" onclick="playPause()"><i id="play-icon" class="ion-play"></i></button>
    <div class="seek-bar">
      <div class="fill"></div>
      <div class="handle"></div>
    </div>
    <button id="broadcast_text" class="postButton" data-session="<%= current_user.id.to_json if logged_in? %>">Post
      Broadcast
    </button>
    <button id="renderPlaylist" class="playlist-modal">Open modal</button>
  </div>
  <div class='audio-player border border-success'>
    <button class="volume"><i class="ion-volume-high"></i></button>
    <div class="volume_bar">
      <div class="volume_fill"></div>
      <div class="volume_handle"></div>
    </div>
    <button class="skip_forward"><i class="ion-skip-forward"></i></button>
  </div>
  <div class="songDetails">
  </div>
  <div id="audio-modal" class="modal-audio">
    <div class="modal-content-audio">
      <%= render partial: "playlists/songs" %>
    </div>
  </div>
</div>
