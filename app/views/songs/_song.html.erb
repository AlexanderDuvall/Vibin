<center>
  <div class="row song" id="<%= song.id %>">
    <div class="postLeft justify-content-center text-center ">
      <div style="position:absolute; bottom:0;">
        <%= image_tag (song.user.avatar), class: "post-ava" if song.user.avatar != nil %>
        <h6 style="margin:0; padding:0;"><span class="badge badge-primary"><%= User.find(song.user_id).name %></span></h6>
        <h6 style="margin:0; padding:0;"><span class="badge badge-primary"><%= link_to "@" + User.find(song.user_id).username, user_path(song.user_id), onclick: "sendTheAJAX('users', #{song.user_id})" %></span></h6>
      </div>
    </div>
    <div class="postCenter justify-content-center">
      <br/>
      <p style="margin-left:10px;" id="context"><%= song.title %></p>
      <div class="row justify-content-center">
        <button class="playButton" onclick="SelectedSong(this,  '<%= User.find(song.user_id).username%>' ,'<%= song.title %>', true ,<%=song.id %>,'<%=url_for(song.song_file) %>'); incrementPlays(<%= song.id %>)">
          <%= image_tag (song.cover_image), class: "playButtonImage" %>
        </button>
      </div>
    </div>
    <div class="postRight">
      <div class="" style="float:right;">
        <p ><%= month(song.updated_at) %><br><%= dayYear(song.updated_at) %><br><%= age(Time.now, song.updated_at) %></p>
      </div>
      <div class="" style="float:right;">
        <% if song.user_id == current_user.id %>
          <p><%= link_to "delete", song, method: :delete,
                       data: {confirm: "You sure?"}, remote: true, class: "delete", id: song.id %></p>
        <% else %>
          <div id="song_<%= song.id %>_likes"><%= render partial: "/songs/likes", locals: {song: song} %></div>
        <% end %>
      </div>
    </div>
  </div>
</center>
<script>
function incrementPlays(id){
console.log(id + "in incrementPlays");
    // ajax request
    $.ajax({
      url: "/playCounter",
      type: "GET",
      data : {
        id: id
      },
      dataType: "script",
    });
  }
</script>
