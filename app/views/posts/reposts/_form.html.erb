<%= form_for @repost  do |f| %>
<center>
  <div class="row">
    <div class="col">
      <%= f.text_area :context, class: "col-xs context-form",  rows: "1", placeholder: "Text" %>
</div>
</div>
  <div class="row post border border-primary ml-1">
    <div class="col-xs-3  justify-content-center text-center " style="width:16%;">
      <%= image_tag (@OGpost.user.avatar), class:"post-ava" if @OGpost.user.avatar != nil %>
      <h5><span class="badge badge-primary"><%= User.find(@OGpost.user_id).name %></span></h5>
      <h5><span class="badge badge-primary" ><%= link_to "@"+User.find(@OGpost.user_id).username, user_path(@OGpost.user_id), class:"links"%></span></h5>
      <br/>
      <br/>
    </div>
    <div class="col-xs-6  " style="width:67%;" >
      <br/>
    <%= @OGpost.context %>
    <div class="row justify-content-center">
        <% @OGpost.images.each do |image| %>
          <div class="col-xs-3 img-wrapper img-post" style="margin-left: 30px;">
            <%= image_tag (image), class:"imageclass" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</center>
    <label class="btn btn-success">
      <%= image_tag "PostButton.png", style: "height:20px; width:20px;" %>
      <span style="display:none;" class="">
        <%= f.submit "", style: "width: 20px; height:20px;" %>
      </span>
    </label>
<% end %>
