<center>
  <div class="row post border border-primary" id="<%= post.id %>">
    <div class="col-xs-3  justify-content-center text-center " style="width:16%;">
      <p> repost </p>
      <%= image_tag (post.user.avatar), class: "post-ava" if post.user.avatar != nil %>
      <h5><span class="badge badge-primary"><%= User.find(post.user_id).name %>'s repost!</span></h5>
      <h5>
        <span class="badge badge-primary"><%= link_to "@" + User.find(post.user_id).username, user_path(post.user_id), class: "links" %></span>
      </h5>
      <br/>
      <br/>
    </div>
    <div class="col-xs-6  " style="width:67%;">
      <br/>
      <% repost = Post.find(post.post_id) %>
      <% context = repost.context %>
      <p style="margin-left:10px;" id="context">REPOST: <%= context %></p>
      <div class="row justify-content-center">

        <% repost.images.each do |image| %>
          <div class="col-xs-3 img-wrapper img-post" style="margin-left: 30px;">
            <%= image_tag (image), class: "imageclass" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-3  " style="width: 15%;">
      <p style="font-size:13px; float:right;"><%= month(post.updated_at) %> <br><%= dayYear(post.updated_at) %>
        <br><%= age(Time.now, post.updated_at) %></p>
    </div>
  </div>
</center>
