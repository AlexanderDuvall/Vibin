<% if logged_in? && current_user.likePost?(post) %>
<%= link_to (image_tag "unfire.png", style: "height:22px;"), post_like_path(post), class: "btn btn-info btn-sm buticons glyphicon glyphicon-fire", method: :delete, remote: true %>
<% else %>
<%= link_to (image_tag("fire.png", style:"height:22px;")), post_like_path(post), class: "btn btn-info btn-sm buticons glyphicon glyphicon-fire",method: :post, remote: true %>
<% end %>
