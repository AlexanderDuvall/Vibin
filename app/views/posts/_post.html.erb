<center>
  <div class="row post" id="<%= post.id %>">
    <div class="col-xs-3  justify-content-center text-center " style="width:25%;">
      <%= image_tag (post.user.avatar), class: "post-ava" if post.user.avatar != nil %>
      <span class="badge badge-primary" style="height: 15px;">  <p style="font-size: 15px;"><%= User.find(post.user_id).name %></p></span>
      <span class="badge badge-primary" style="height: 17px;"><p style="font-size: 17px;"><%= link_to "@" + User.find(post.user_id).username, user_path(post.user_id) %></p></span>
      <br/>
      <br/>
    </div>hom
    <div class="col-xs-6 justify-content-center" style="width:50%;">
      <br/>
      <p style="margin-left:10px; font-size:15px;" id="context"><%= post.context %></p>
      <div class="row justify-content-center">
        <% post.images.each do |image| %>
          <div class="col-xs-3 img-wrapper img-post" style="margin-left: 30px;">
            <%= image_tag (image), class: "imageclass" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-3" style="width: 15%;">
      <p style="font-size:13px; float:right;"><%= month(post.updated_at) %> <br><%= dayYear(post.updated_at) %>
        <br><%= age(Time.now, post.updated_at) %></p>
      <% if post.user_id != current_user.id %>
        <div id="post_<%= post.id %>_likes"><%= render partial: "/posts/likes", locals: {post: post} %></div>
      <% else %>
        <p>  <%= link_to "delete", post, method: :delete,
                         data: {confirm: "You sure?"}, remote: true, class: "delete", id: post.id %></p>
      <% end %>
      <%= link_to "Repost", post_repost_path(post), method: :post %>


    </div>
  </div>
</center>
