<center>
  <div class="row post" id="<%= post.id %>">
    <div class="postLeft justify-content-center text-center">
      <div style="position: absolute; bottom:0;">
        <% if @user.avatar.attached? %>
          <%= image_tag (@user.avatar), style: "width:100px; height:100px; object-fit:cover;" %>
        <% else %>
          <img src="http://localhost:3000/default-avatar.jpg" style="width:100px; height:100px; object-fit:cover;">
        <% end %>
         <h6 style="margin:0; padding:0;"><span class="badge badge-primary"><%= User.find(post.user_id).name %></span>
        </h6>
        <h6 style="margin:0; padding:0;">
          <span class="badge badge-primary"><%= link_to "@" + User.find(post.user_id).username, user_path(post.user_id), onclick: "sendTheAJAX('users', #{post.user_id})" %></span>
        </h6>
      </div>
    </div>
    <div class="postCenter justify-content-center">
      <br/>
      <p style="margin-left:10px; font-size:15px;" id="content"><%= post.content %></p>
      <div class="row justify-content-center">
        <% post.images.each do |image| %>
          <div class="col-xs-3 img-wrapper img-post" style="margin-left: 30px;">
            <%= image_tag (image), class: "imageclass" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="postRight">
      <div class="" style="float:right;">
        <p><%= month(post.updated_at) %><br><%= dayYear(post.updated_at) %><br><%= age(Time.now, post.updated_at) %></p>
      </div>
      <div class="" style="float:right;">
        <% if post.user_id != current_user.id %>
          <%= link_to "Repost", post_repost_path(post), method: :post %>
          <div id="post_<%= post.id %>_likes"><%= render partial: "/posts/likes", locals: {post: post} %></div>
        <% else %>
          <p><%= link_to "delete", post, method: :delete,
                         data: {confirm: "You sure?"}, remote: true, class: "delete", id: post.id %></p>
        <% end %>
      </div>
    </div>
  </div>
</center>
