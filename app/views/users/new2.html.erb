<style>
  .HorizontalArtistRow{
    height: 150px;
    width: 100%;
    overflow-x: scroll;
    overflow-y: hidden;
    white-space: nowrap;
    border: pink;
    border-style: solid;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none;  /* Internet Explorer 10+ */
  }
  .YourTaste_ArtistBox{
    height: 175px;
    width: 300px;
    margin-right: 10px;
    background-color: #b2b0ae;
    display: inline-block;
    border-radius: 10px;
  }
  .YourTaste_ArtistImageColumn{
    height: 150px;
    width: 130px;
    background-color: #9AD3EB;
    border-radius: 10px;
    float: left;
  }
  .YourTaste_ArtistInfoColumn{
    height: 150px;
    width: 170px;
    background-color: #89ebff;
    float: left;
  }
  .YourTaste_ArtistAvaImage {
    display: block;
    height: 120px;
    width: 120px;
    border-radius: 60px;
    border-color: white;
    border-style: solid;
    margin-left: 5px;
    margin-top: 10px;
  }
    .YourTaste_ArtistGenre{
      height: 20px;
      width: 40px;
      background-color: #eb5c30;
      border-radius: 6px;
      float: left;
      margin-right: 5px;
    }
</style>
<div id="yourTaste" class="YourTaste">
  <!-- Favorite Genres -->
  <h2 style="text-align: center;
      font-family: 'Gill Sans', sans-serif">Your Music Taste
  </h2>
  <div class="HorizontalArtistRow" id="horizontalArtistRow">
    <% @topArtists.each do |artist| %>
      <div class="YourTaste_ArtistBox">
        <div class="YourTaste_ArtistImageColumn">
          <% if User.find(artist.artist_id).avatar.attached? %>
            <%= image_tag (User.find(artist.artist_id).avatar), class: "YourTaste_ArtistAvaImage" %>
          <% else %>
            <img src="http://localhost:3000/default-avatar.jpg" class="YourTaste_ArtistAvaImage">
          <% end %>
        </div>
        <div class="YourTaste_ArtistInfoColumn">
          <p style="font-size: x-large; word-break: normal; white-space: normal"><%= User.find(artist.artist_id).name %></p>
          <div class="YourTaste_ArtistGenre" >
            Pop
          </div>
          <div class="YourTaste_ArtistGenre">
            Rap
          </div>
          <div class="YourTaste_ArtistGenre">
            Alternative
          </div>
        </div>
      </div>
    <% end %>
  </div>
